{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./controllers/*"],
      "@routes/*": ["./routes/*"],
      "@prisma/*": ["./prisma/*"]
    }
  },
  "include": ["*.js", "controllers/**/*", "routes/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "dist"]
}
